# Configurações do Servidor
PORT=3000
# NODE_ENV: 'development' (usa /usr/bin/google-chrome-stable) ou 'production' (usa /usr/bin/chromium-browser)
NODE_ENV=production
# Use HTTPS? (true em produção com SSL, false em desenvolvimento HTTP)
USE_HTTPS=false

# Configurações do Banco de Dados
DB_HOST=localhost
DB_USER=cardapio_user
DB_PASSWORD=sua_senha_segura_aqui
DB_NAME=cardapio_db
DB_PORT=3306

# JWT Secret (gere uma chave segura)
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_mude_isso

# Session Secret (gere uma chave segura diferente do JWT)
SESSION_SECRET=sua_chave_session_super_secreta_aqui_mude_isso

# Configurações da Aplicação
RESTAURANT_NAME=Restaurante Chaufa
ADMIN_EMAIL=admin@restaurante.com
ADMIN_PASSWORD=Admin@123

# Configurações de Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads
