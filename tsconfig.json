{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/hooks/useAuthGuard":["./app/hooks/useAuthGuard"],
      "@/hooks/usePratos":["./app/hooks/usePratos"],
      "@/hooks/useCategorias":["./app/hooks/useCategorias"],

      "@/context/AuthContext":["./app/context/AuthContext"],
      
      "@/components/CardapioPDF":["./app/components/CardapioPDF"],
      "@/components/PratoItem":["./app/components/PratoItem"],
      "@/components/FormularioPrato":["./app/components/FormularioPrato"],
      "@/components/PainelPratos":["./app/components/PainelPratos"],
      "@/components/PainelCategorias":["./app/components/PainelCategorias"],

      "@/components/EditarPratoModal":["./app/components/EditarPratoModal"],
      "@/components/NovoPratoModal":["./app/components/NovoPratoModal"],
      "@/components/ListaDePratosPainel":["./app/components/ListaDePratosPainel"],
      "@/components/ListaDeCategoriasPainel":["./app/components/ListaDeCategoriasPainel"],
      "@/components/ConfirmacaoModal":["./app/components/ConfirmacaoModal"],
      "@/components/*": ["./app/components/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
